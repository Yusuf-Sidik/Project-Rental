<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginRegist.RegisterFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Register"
            android:textColor="@color/main_color"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="159dp"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="132dp"
            android:text="Submit"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <EditText
            android:id="@+id/login_edt_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edt_background"
            android:elevation="5dp"
            android:ems="10"
            android:inputType="text"
            android:padding="13dp"
            android:shadowRadius="12"
            android:hint="Username"
            android:textColorHint="@color/main_color"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/login_edt_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_background"
            android:elevation="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="13dp"
            android:shadowRadius="12"
            android:hint="Name"
            android:textColorHint="@color/main_color"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_edt_username" />

        <EditText
            android:id="@+id/login_edt_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_background"
            android:elevation="5dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:shadowRadius="12"
            android:hint="Email"
            android:textColorHint="@color/main_color"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_edt_name" />

        <EditText
            android:id="@+id/login_edt_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:background="@drawable/edt_background"
            android:elevation="5dp"
            android:ems="10"
            android:inputType="textPassword"
            android:autofillHints="name"
            android:padding="13dp"
            android:shadowRadius="12"
            android:hint="Password"
            android:textColorHint="@color/main_color"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_edt_email" />

        <TextView
            android:id="@+id/tv_HaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Sudah memiliki akun?"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_submit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>