<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:context=".ui.pinjam.PinjamActivity">
    
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Informasi Pribadi"
            android:fontFamily="@font/interold"
            android:textColor="@color/main_color"
            android:textSize="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_nama"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Nama"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edt_background"
            android:textColorHint="@color/main_color"
            android:textColor="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_alamat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edt_background"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="Alamat"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_notelp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edt_background"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="Nomor telepon"
            android:inputType="number"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_nik"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edt_background"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="NIK"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Informasi Kendaraan"
            android:textSize="30dp"
            android:fontFamily="@font/interold"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Pilih Kendaraan"
            android:fontFamily="@font/interold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_KondisiKendaraan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edt_background"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="Kondisi Kendaraan"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_KondisiAwal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edt_background"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="Kondisi Awal"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_sisaEtoll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edt_background"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="Sisa E-toll awal"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Informasi Peminjaman"
            android:textSize="30dp"
            android:fontFamily="@font/interold"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_tanggalPinjam"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edt_background"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="Tanggal_pinjam"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/interold"
            android:textColor="@color/main_color"
            android:text="Dokumentasi Pendukung"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_UploadKTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interold"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Upload foto KTP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_Uploadwajah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Upload foto Wajah"
            android:fontFamily="@font/interold"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_pinjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pinjam"
            android:backgroundTint="@color/main_color"
            android:fontFamily="@font/interold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="32dp"
            />

    </LinearLayout>

</ScrollView>